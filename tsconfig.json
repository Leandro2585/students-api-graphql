{
  "compilerOptions": {
    "outDir": "build",
    "rootDirs": ["src", "tests"],
    "target": "ES2018",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@main/*": ["main/*"],
      "@core/*": ["core/*"],
      "@infra/*": ["infra/*"],
      "@app/*": ["app/*"],
      "@tests/*": ["../tests/*"]
    },
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests"]
}
